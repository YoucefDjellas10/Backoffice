<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_block_car_form" model="ir.ui.view">
        <field name="name">block.car.form</field>
        <field name="model">block.car</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="vehicule_id" required="1"/>
                        </group>
                        <group>
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="reason" placeholder="Raison du blocage..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_block_car_tree" model="ir.ui.view">
        <field name="name">block.car.tree</field>
        <field name="model">block.car</field>
        <field name="arch" type="xml">
            <tree>
                <field name="vehicule_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="reason"/>
            </tree>
        </field>
    </record>

    <record id="block_car_action_form" model="ir.actions.act_window">
        <field name="name">Blocage de véhicules</field>
        <field name="res_model">block.car</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="block_car_menu_main"
              name="Blocage Véhicules"
              parent="planning_menu_dashboard"
              action="block_car_action_form"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"
              sequence="220"/>
</odoo>
