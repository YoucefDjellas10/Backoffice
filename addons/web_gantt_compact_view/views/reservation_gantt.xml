<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_reservation_gantt" model="ir.ui.view">
        <field name="name">reservation.gantt</field>
        <field name="model">reservation</field>
        <field name="arch" type="xml">
            <ganttview date_start="date_heure_debut"
                       date_stop="date_heure_fin"
                       string="Reservations"
                       default_group_by="modele"/>
        </field>
    </record>
    <record id="reservation.reservation_action" model="ir.actions.act_window">
        <field name="view_mode">tree,kanban,calendar,gantt,ganttview,form</field>
    </record>
</odoo>