<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Définition de la vue formulaire -->
    <record id="view_nb_jour_form" model="ir.ui.view">
        <field name="name">nb.jour.form</field>
        <field name="model">nb.jour</field>
        <field name="arch" type="xml">
            <form string="nb jour">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="de"/>
                        <field name="au"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Définition de la vue arborescente -->
    <record id="view_nb_jour_tree" model="ir.ui.view">
        <field name="name">nb.jour.tree</field>
        <field name="model">nb.jour</field>
        <field name="arch" type="xml">
            <tree string="nb jour">
                <field name="name"/>
                <field name="de"/>
                <field name="au"/>
            </tree>
        </field>
    </record>

    <!-- Définition de l'action -->
    <record id="action_nb_jour" model="ir.actions.act_window">
        <field name="name">Nombre de Jour</field>
        <field name="res_model">nb.jour</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Définition du menu -->
    <menuitem id="menu_nb_jour_sub"
              name="Nombre de jour"
              sequence="3"
              parent="tarification.menu_tarifications"
              action="action_nb_jour"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>
</odoo>
