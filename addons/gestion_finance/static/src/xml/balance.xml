<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="BalanceTemplate">
        <script type="module" src="https://cdn.jsdelivr.net/npm/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"></link>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700display=swap" rel="stylesheet"></link>

<style>
    /* ✅ Correction du scroll : le menu Odoo reste fixe, seul le contenu défile */
    .o_action_manager .o_action > div {
        height: 100%;
    }

    /* ---- Design principal ---- */
    .balance-container {
        font-family: 'Poppins', sans-serif !important;
        background: linear-gradient(130deg,#6770b7, #cab1d9) !important;
        min-height: 100%;
        height: 100%;
        overflow-y: auto !important; /* scroll ici uniquement */
        padding: 20px 0 40px 0;
        position: relative;
        width: 100%;
    }

    .balance-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('https://i.ibb.co/ZR4bt0Cw/6f09b0e8-6820-4ac0-bedd-5797e92814c18.jpg') center/cover no-repeat;
        opacity: 0.15;
        z-index: 0;
        pointer-events: none;
    }

    .balance-container .main-container {
        position: relative;
        z-index: 1;
    }

    .balance-container .header-section {
        text-align: center;
        margin-bottom: 50px;
        padding: 30px 20px;
        background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.85) 100%) !important;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.15);
        backdrop-filter: blur(10px);
        animation: fadeInDown 0.8s ease;
    }

    @keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .balance-container .balance-title {
        font-weight: 700;
        background: linear-gradient(-135deg, #406085 0%, #65748B 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-size: 48px;
        margin-bottom: 10px;
        letter-spacing: 2px;
        text-transform: uppercase;
    }

    .balance-container .sub-title {
        color: #5f6368;
        font-size: 18px;
        font-weight: 400;
        letter-spacing: 1px;
    }

    .balance-container .team-card {
        background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(236,245,252,0.9) 100%) !important;
        border-radius: 16px;
        padding: 24px;
        border: 2px solid rgba(255,255,255,0.5);
        box-shadow: 0 8px 32px rgba(31,38,135,0.15);
        backdrop-filter: blur(8px);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
        animation: fadeInUp 0.6s ease;
        margin-bottom: 20px;
    }

    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .balance-container .team-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, #273573, #47367f, #673486, #872f87, #a52683, #c01a78, #d71569, #e92355);
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.4s ease;
    }

    .balance-container .team-card:hover::before {
        transform: scaleX(1);
    }

    .balance-container .team-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 16px 48px rgba(31,38,135,0.25);
        border-color: rgba(255,255,255,0.8);
    }

    .balance-container .label {
        font-weight: 700;
        font-size: 20px;
        background: linear-gradient(135deg, #406085 0%, #535da9 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 1px;
        position: relative;
        padding-bottom: 12px;
    }

    .balance-container .label::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 50px;
        height: 3px;
        background: linear-gradient(90deg, #273573,  #121B33);
        border-radius: 2px;
    }

    .balance-container .custom-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 8px;
    }

    .balance-container .custom-table tr {
        background: rgba(255,255,255,0.6);
        transition: all 0.3s ease;
        border-radius: 8px;
    }

    .balance-container .custom-table tr:hover {
        background: rgba(255,255,255,0.9);
        transform: translateX(5px);
    }

    .balance-container .custom-table td {
        padding: 12px 14px;
        color: #2c3e50;
        font-size: 15px;
        font-weight: 400;
        vertical-align: middle;
    }

    /* Table 3 colonnes (Manager + Zones) */
    .balance-container .custom-table.three-columns td:first-child {
        width: 10%;
        text-align: center;
        padding-right: 5px;
        border-radius: 8px 0 0 8px;
    }

    .balance-container .custom-table.three-columns td:nth-child(2) {
        width: 60%;
        text-align: left;
        font-weight: 500;
        padding-left: 5px;
    }

    .balance-container .custom-table.three-columns td:last-child {
        text-align: right;
        font-weight: 600;
        color: #27ae60;
        width: 30%;
        border-radius: 0 8px 8px 0;
    }

    /* Table 2 colonnes (CEO) */
    .balance-container .custom-table.two-columns td:first-child {
        width: 15%;
        text-align: center;
        padding-right: 5px;
        border-radius: 8px 0 0 8px;
    }

    .balance-container .custom-table.two-columns td:last-child {
        width: 85%;
        text-align: left;
        font-weight: 500;
        padding-left: 5px;
        border-radius: 0 8px 8px 0;
    }

    /* Liens utilisateurs */
    .balance-container .user-link {
        color: inherit;
        text-decoration: none;
        transition: all 0.3s ease;
        display: block;
    }

    .balance-container .user-link:hover {
        color: #27ae60;
        text-decoration: none;
    }

    .balance-container .custom-table tr:hover .user-link {
        color: #27ae60;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .balance-container .balance-title { font-size: 36px; }
        .balance-container .sub-title { font-size: 16px; }
        .balance-container .header-section { margin-bottom: 35px; padding: 25px 15px; }
        .balance-container .team-card { padding: 20px; }
        .balance-container .label { font-size: 18px; }
        .balance-container .custom-table td { padding: 10px 8px; font-size: 14px; }
    }

    @media (max-width: 576px) {
        .balance-container { padding: 10px 0 30px 0; }
        .balance-container .balance-title { font-size: 28px; letter-spacing: 1px; margin-bottom: 8px; }
        .balance-container .sub-title { font-size: 14px; letter-spacing: 0.5px; }
        .balance-container .header-section { margin-bottom: 25px; padding: 20px 15px; border-radius: 15px; }
        .balance-container .team-card { padding: 16px; margin-bottom: 15px; border-radius: 12px; }
        .balance-container .label { font-size: 16px; margin-bottom: 15px; padding-bottom: 10px; }
        .balance-container .label::after { width: 40px; }
        .balance-container .custom-table { border-spacing: 0 6px; }
        .balance-container .custom-table td { padding: 10px 6px; font-size: 13px; }
        .balance-container .team-card:hover { transform: translateY(-4px) scale(1.01); }

        .balance-container .custom-table.two-columns td:first-child { width: 20%; }
        .balance-container .custom-table.two-columns td:last-child { width: 80%; }
    }
</style>

        <!-- Structure HTML avec la classe balance-container -->
        <div class="balance-container">
            <div class="main-container">
                <div class="container">

                    <t t-if="state.loading">
                        <div style="text-align: center; padding: 50px;">
                            <div>Chargement des données...</div>
                        </div>
                    </t>

                    <t t-elif="!state.loading">

                        <div class="row g-4">
                            <!-- CEO -->
                            <div class="col-md-4">
                                <div class="team-card">
                                    <div class="label">CEO</div>
                                    <table class="custom-table two-columns">
                                        <tbody>
                                            <t t-foreach="state.ceos" t-as="ceo" t-key="ceo.id">
                                                <tr>
                                                    <td>
                                                        <ion-icon name="person-circle-sharp" size="small" style="color: #27ae60;"></ion-icon>
                                                    </td>
                                                    <td style="font-weight: bold;">
                                                        <a t-att-href="'/web#id=' + ceo.record_id + '&amp;model=caisse.record&amp;view_type=form'"
                                                           class="user-link"
                                                           t-esc="ceo.name"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="state.ceos.length === 0">
                                                <tr>
                                                    <td colspan="2" style="text-align: center; color: #6c757d; padding: 20px;">
                                                        Aucun CEO
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Manager Général -->
                            <div class="col-md-4">
                                <div class="team-card">
                                    <div class="label">Manager</div>
                                    <table class="custom-table three-columns">
                                        <tbody>
                                            <t t-foreach="state.managersGeneraux" t-as="manager" t-key="manager.id">
                                                <tr>
                                                    <td>
                                                        <ion-icon name="person-circle-outline" style="color: #6a6b6b;"></ion-icon>
                                                    </td>
                                                    <td>
                                                        <a t-att-href="'/web#id=' + manager.record_id + '&amp;model=caisse.record&amp;view_type=form'"
                                                           class="user-link"
                                                           t-esc="manager.name"/>
                                                    </td>
                                                    <td t-esc="formatBalance(manager.balance)"/>
                                                </tr>
                                            </t>
                                            <t t-if="state.managersGeneraux.length === 0">
                                                <tr>
                                                    <td colspan="3" style="text-align: center; color: #6c757d; padding: 20px;">
                                                        Aucun manager général
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Zones -->
                            <t t-if="Object.keys(state.zones).length > 0">
                                <t t-set="zoneNames" t-value="Object.keys(state.zones)"/>
                                <t t-foreach="zoneNames" t-as="zoneName" t-key="zoneName_index">
                                    <div class="col-md-4">
                                        <div class="team-card">
                                            <div class="label" t-esc="zoneName"/>
                                            <table class="custom-table three-columns">
                                                <tbody>
                                                    <t t-if="state.zones[zoneName].manager">
                                                        <tr style="background-color: #ffffff; box-shadow: 1px 1px 1px #27ae60 inset;">
                                                            <td>
                                                                <ion-icon name="person-circle-sharp" size="small" style="color: #27ae60;"></ion-icon>
                                                            </td>
                                                            <td style="font-weight: bold;">
                                                                <a t-att-href="'/web#id=' + state.zones[zoneName].manager.record_id + '&amp;model=caisse.record&amp;view_type=form'"
                                                                   class="user-link"
                                                                   t-esc="state.zones[zoneName].manager.name"/>
                                                            </td>
                                                            <td t-esc="formatBalance(state.zones[zoneName].manager.balance)"/>
                                                        </tr>
                                                    </t>

                                                    <t t-foreach="state.zones[zoneName].agents" t-as="agent" t-key="agent_index">
                                                        <tr>
                                                            <td>
                                                                <ion-icon name="person-circle-outline" style="color: #6a6b6b;"></ion-icon>
                                                            </td>
                                                            <td>
                                                                <a t-att-href="'/web#id=' + agent.record_id + '&amp;model=caisse.record&amp;view_type=form'"
                                                                   class="user-link"
                                                                   t-esc="agent.name"/>
                                                            </td>
                                                            <td t-esc="formatBalance(agent.balance)"/>
                                                        </tr>
                                                    </t>

                                                    <t t-if="!state.zones[zoneName].manager and state.zones[zoneName].agents.length === 0">
                                                        <tr>
                                                            <td colspan="3" style="text-align: center; color: #6c757d; padding: 20px;">
                                                                Aucun agent dans cette zone
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </t>
                            </t>

                            <t t-elif="Object.keys(state.zones).length === 0">
                                <div class="col-12">
                                    <div class="team-card">
                                        <div style="text-align: center; padding: 40px; color: #6c757d;">
                                            Aucune zone avec des agents
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </t>
                </div>
            </div>
        </div>
    </t>
</templates>
