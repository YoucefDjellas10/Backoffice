        <field name="domain">[('zone.id', '=', 1), ('status', 'in', ['en_attente', 'valde_mr'])]</field>
        <field name="context">{'search_default_filter_en_attente': 1, 'create': False}</field>
    </record>

    <menuitem id="menu_depense_record_zone_two"
              name="Liste des dépenses"
              parent="menu_caisse_record_sub_agent_o1"
              action="action_depense_record_zone_two"
