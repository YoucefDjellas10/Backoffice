              groups="access_rights_groups.group_oran_one"/>

    <record id="action_depense_record_zone_three" model="ir.actions.act_window">
        <field name="name">Dépenses alger</field>
        <field name="res_model">depense.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('zone.id', '=', 2), ('status', 'in', ['en_attente', 'valde_mr'])]</field>
        <field name="context">{'search_default_filter_en_attente': 1, 'create': False}</field>
    </record>

    <menuitem id="menu_depense_record_zone_three"
              name="Liste des dépenses"
              parent="menu_caisse_record_sub_agent_a6"
              action="action_depense_record_zone_three"
              sequence="1"
              groups="access_rights_groups.group_alger_six"/>

    <record id="action_depense_record_zone_four" model="ir.actions.act_window">
        <field name="name">Dépenses est</field>
        <field name="res_model">depense.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('zone.id', '=', 3), ('status', 'in', ['en_attente', 'valde_mr'])]</field>
        <field name="context">{'search_default_filter_en_attente': 1, 'create': False}</field>
    </record>

    <menuitem id="menu_depense_record_zone_four"
              name="Liste des dépenses"
              parent="menu_caisse_record_sub_agent_c1"
              action="action_depense_record_zone_four"
              sequence="1"
              groups="access_rights_groups.group_constantine_one"/>


