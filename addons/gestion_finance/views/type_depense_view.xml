<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Définition de la vue formulaire -->
    <record id="view_type_depens_form" model="ir.ui.view">
        <field name="name">type.depens.form</field>
        <field name="model">type.depens</field>
        <field name="arch" type="xml">
            <form string="type depens">
                <sheet>
                        <group>
                            <group class="custom-group">
                                <field name="name"/>
                            </group>
                            <groupe>
                        </groupe>
                        </group>

                    
                </sheet>
            </form>
        </field>
    </record>

    <!-- Définition de la vue arborescente -->
    <record id="view_type_depens_tree" model="ir.ui.view">
        <field name="name">type.depens.tree</field>
        <field name="model">type.depens</field>
        <field name="arch" type="xml">
            <tree string="type depens">
                <field name="name"/>
            </tree>
        </field>
    </record>


    <!-- Définition de l'action -->
    <record id="action_type_depens" model="ir.actions.act_window">
        <field name="name">Type des dépenses</field>
        <field name="res_model">type.depens</field>
        <field name="view_mode">tree,form</field>

    </record>

    <!-- Définition du menu -->
    <menuitem id="menu_type_depens_sub"
              name="Type des dépenses"
              sequence="5"
              parent="menu_depense_record_sub"
              action="action_type_depens"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>
</odoo>
