<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- DÃ©finition de la vue formulaire -->
    <record id="view_fournisseur_form" model="ir.ui.view">
        <field name="name">fournisseur.form</field>
        <field name="model">fournisseur</field>
        <field name="arch" type="xml">
            <form string="fournisseur">
                <sheet>
                    <group class="custom-group">
                        <field name="name"/>
                        <field name="specialite_metier"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_fournisseur_tree" model="ir.ui.view">
        <field name="name">fournisseur.tree</field>
        <field name="model">fournisseur</field>
        <field name="arch" type="xml">
            <tree string="fournisseur">
                <field name="name"/>
                <field name="specialite_metier"/>
            </tree>
        </field>
    </record>

    <record id="view_fournisseur_search" model="ir.ui.view">
        <field name="name">fournisseur.search</field>
        <field name="model">fournisseur</field>
        <field name="arch" type="xml">
            <search string="fournisseur">
                <field name="name"/>
                <field name="specialite_metier"/>

            </search>
        </field>
    </record>

    <record id="action_fournisseur" model="ir.actions.act_window">
        <field name="name">Les fournisseurs</field>
        <field name="res_model">fournisseur</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- DÃ©finition du menu -->
    <menuitem id="menu_fournisseur_sub_"
              name="Liste des fournisseurs"
              sequence="5"
              parent="menu_gestion_finance"
              action="action_fournisseur"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>
    <menuitem id="menu_fournisseur_sub_agent"
              name="Liste des fournisseurs"
              sequence="5"
              parent="menu_finance_depense"
              action="action_fournisseur"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>
</odoo>
