<odoo>
    <record id="view_reservation_form" model="ir.ui.view">
        <field name="name">reservation.form.inherit.revenue</field>
        <field name="model">reservation</field>
        <field name="inherit_id" ref="reservation.reservation_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Encaissements">
                    
                    <field name="revenue_ids" widget="one2many_list">
                        <tree editable="bottom">
                            <field name="mode_paiement"/>
                            <field name="montant"/>
                            <field name="montant_dzd"/>
                            <field name="create_date" string="Date" readonly="1"/>
                            <field name="create_uid" string="Effectuer par" widget="many2one_avatar_user" readonly="1"/>
                            <field name="total_reduit_euro"/>

                        </tree>
                    </field>
                    <group>
                        <field name="total_revenue"/>
                    </group>

                </page>

                <page string="Remboursement">
                    <field name="refunds_ids" widget="one2many_list">                                                  
                        <tree editable="bottom">                                                                
                            <field name="name"/>
                            <field name="create_uid"/>
                            <field name="date"/>
                            <field name="amount"/>
                            <field name="currency"/>
                            <field name="status"/>
                            <field name="note"/>
                        </tree>

                    </field>

                    <group>
                        <field name="total_refunds"/>
                    </group>

                </page>

            </xpath>
        </field>
    </record>
</odoo>
