<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue Formulaire -->
        <record id="view_refund_table_form" model="ir.ui.view">
            <field name="name">refund.table.form</field>
            <field name="model">refund.table</field>
            <field name="arch" type="xml">
                <form string="Remboursement">

                    <header>
                        <field name="status" widget="statusbar"/>

                        <button name="action_effectuer"
                                string="Marquer comme effectuÃ©"
                                type="object"
                                class="btn-primary"
                                invisible="status == 'effectuer'"/>
                    </header>


                    <sheet>
                        <group class="custom-group">
                            <field name="name"/>
                            <field name="reservation"/>
                            <field name="currency" invisible="1"/>
                            <field name="amount"/>
                            <field name="status" readonly="1"/>
                            <field name="date" readonly="1"/>
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue Liste -->
        <record id="view_refund_table_tree" model="ir.ui.view">
            <field name="name">refund.table.tree</field>
            <field name="model">refund.table</field>
            <field name="arch" type="xml">
                <tree string="Remboursements">
                    <field name="name"/>
                    <field name="date" readonly="1"/>
                    <field name="reservation"/>
                    <field name="currency" optional="hide" invisible="1"/>
                    <field name="amount"/>
                    <field name="status" readonly="1"/>
                </tree>
            </field>
        </record>

        <!-- Vue Recherche -->
        <record id="view_refund_table_search" model="ir.ui.view">
            <field name="name">refund.table.search</field>
            <field name="model">refund.table</field>
            <field name="arch" type="xml">
                <search string="Remboursements">
                    <field name="name"/>
                    <field name="reservation"/>
                    <field name="status"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_refund_table" model="ir.actions.act_window">
            <field name="name">Remboursements</field>
            <field name="res_model">refund.table</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_refund_table_sub_"
                  name="Liste des remboursements"
                  sequence="5"
                  parent="menu_finance_depense"
                  action="action_refund_table"
                  groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>

    </data>
</odoo>
