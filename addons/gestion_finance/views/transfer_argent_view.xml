<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Définition de la vue formulaire -->
    <record id="view_transfer_argent_form" model="ir.ui.view">
        <field name="name">transfer.argent.form</field>
        <field name="model">transfer.argent</field>
        <field name="arch" type="xml">
            <form string="transfer argent">
                <sheet>
                    <group>
                        <groupe>
                            <group class="custom-group">
                                <field name="de"/>

                            </group>
                        </groupe>
                        <group class="custom-group ">
                            <field name="vers"/>
                            <field name="dinar" invisible="1"/>
                            <field name="montant_dzd"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Définition de la vue arborescente -->
    <record id="view_transfer_argent_tree" model="ir.ui.view">
        <field name="name">transfer.argent.tree</field>
        <field name="model">transfer.argent</field>
        <field name="arch" type="xml">
            <tree string="transfer argent">
                <field name="name"/>
                <field name="create_date" string="Date"/>
                <field name="de" widget="badge" decoration-danger="name"/>
                <field name="vers" widget="badge" decoration-success="name"/>
                <field name="dinar" invisible="1" optional="hide"/>
                <field name="montant_dzd" sum="Total" widget="monetary"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <!-- Définition de l'action -->
    <record id="action_transfer_argent" model="ir.actions.act_window">
        <field name="name">Transfer</field>
        <field name="res_model">transfer.argent</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Définition du menu -->
    <menuitem id="menu_transfer_argent_sub"
              name="Transfer"
              sequence="3"
              parent="menu_gestion_finance_sub"
              action="action_transfer_argent"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>
</odoo>
