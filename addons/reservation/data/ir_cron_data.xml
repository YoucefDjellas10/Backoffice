<odoo>
    <data noupdate="1">
        <record id="ir_cron_optimize__reservations" model="ir.cron">
            <field name="name">Optimiser les réservations - zone OUEST</field>
            <field name="model_id" ref="model_modele"/>
            <field name="state">code</field>
            <field name="code">model.optimize_reservations()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
        <record id="ir_cron_update_annule_records" model="ir.cron">
            <field name="name">Mise à jour des réservations annulées</field>
            <field name="model_id" ref="model_reservation"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_annule_records()</field>
            <field name="active">True</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
        </record>

        <record id="ir_cron_clean_duplicate_reservations_soft" model="ir.cron">
            <field name="name">Nettoyage doux des doublons de réservations</field>
            <field name="model_id" ref="model_reservation"/>
            <field name="state">code</field>
            <field name="code">model._cron_clean_duplicate_reservations(limit=300)</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
        </record>
        <record id="ir_cron_update_reservations_to_loue" model="ir.cron">
            <field name="name">Auto mise à jour des réservations louées</field>
            <field name="model_id" ref="model_reservation"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_reservations_to_loue()</field>
            <field name="active">True</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
        </record>


        <!-- Cron pour recalculer les champs clients -->
        <record id="ir_cron_recompute_client_fields_" model="ir.cron">
            <field name="name">Recalcul des champs clients (réservations)</field>
            <field name="model_id" ref="model_liste_client"/>
            <field name="state">code</field>
            <field name="code">model._cron_recompute_client_fields()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="doall">False</field>
            <field name="priority">10</field>
        </record>

        <record id="ir_cron_mark_old_reservations" model="ir.cron">
            <field name="name">Marquer anciennes réservations (à supprimer après exécution)</field>
            <field name="model_id" ref="model_livraison"/>
            <field name="state">code</field>
            <field name="code">model.cron_mark_old_reservations()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>        

        
        <record id="cron_verify_recent_reservations" model="ir.cron">
            <field name="name">Vérifier les réservations récentes (1h)</field>
            <field name="model_id" ref="model_reservation"/>
            <field name="state">code</field>
            <field name="code">model.cron_verify_recent_reservations()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <record id="ir_cron_update_exchange_amount" model="ir.cron">
            <field name="name">Update Reservation Exchange Amount</field>
            <field name="model_id" ref="model_reservation"/>
            <field name="state">code</field>
            <field name="code">model._cron_update_exchange_amount()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
