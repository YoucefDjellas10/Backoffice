<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire pour popup de conflit -->
    <record id="view_popup_confirmation_conflit_form" model="ir.ui.view">
        <field name="name">popup.confirmation.conflit.form</field>
        <field name="model">popup.confirmation</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Conflit de Réservation">
                <group>
                    <field name="popup_type" invisible="1"/>
                    <field name="original_record_id" invisible="1"/>
                    <field name="original_model" invisible="1"/>
                    <div colspan="2">
                        <p style="font-size: 14px; color: #d9534f; font-weight: bold;">
                            <field name="message" readonly="1" nolabel="1"/>
                        </p>
                    </div>
                </group>
                <footer>
                    <button string="Annuler" name="action_cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Vue formulaire pour popup de disponibilité -->
    <record id="view_popup_confirmation_disponible_form" model="ir.ui.view">
        <field name="name">popup.confirmation.disponible.form</field>
        <field name="model">popup.confirmation</field>
        <field name="priority">5</field>
        <field name="arch" type="xml">
            <form string="Confirmation de Disponibilité">
                <group>
                    <field name="popup_type" invisible="1"/>
                    <field name="original_record_id" invisible="1"/>
                    <field name="original_model" invisible="1"/>
                    <div colspan="2">
                        <p style="font-size: 14px; color: #5cb85c; font-weight: bold;">
                            <field name="message" readonly="1" nolabel="1"/>
                        </p>
                    </div>
                </group>
                <footer>
                    <button string="Confirmer" name="action_confirm" type="object" class="btn-primary"/>
                    <button string="Annuler" name="action_cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Actions pour les popups -->
    <record id="action_popup_confirmation_conflit" model="ir.actions.act_window">
        <field name="name">Conflit de Réservation</field>
        <field name="res_model">popup.confirmation</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_popup_confirmation_conflit_form"/>
        <field name="target">new</field>
        <field name="domain">[('popup_type', '=', 'conflit')]</field>
    </record>

    <record id="action_popup_confirmation_disponible" model="ir.actions.act_window">
        <field name="name">Confirmation de Disponibilité</field>
        <field name="res_model">popup.confirmation</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_popup_confirmation_disponible_form"/>
        <field name="target">new</field>
        <field name="domain">[('popup_type', '=', 'disponible')]</field>
    </record>
</odoo>
