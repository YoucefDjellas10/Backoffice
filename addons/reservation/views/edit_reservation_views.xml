<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_edit_reservation_form" model="ir.ui.view">
        <field name="name">edit.reservation.form</field>
        <field name="model">edit.reservation</field>
        <field name="arch" type="xml">
            <form string="Modifier la réservation">
                 
                <sheet>
                    <group>
                        <group>
                            <field name="lieu_depart" readonly="1"/>
                            <field name="date_depart" readonly="1"/>
                            <field name="heure_depart" readonly="1"/>
                        </group>
                        <group>
                            <field name="lieu_retour"/>
                            <field name="date_retour"/>
                            <field name="heure_retour"/>
                            <field name="disponible" invisible="1"/>
                        </group>
                        
                    </group>
                </sheet>

                <footer>
                    <button name="action_verify_reservation"
                        string="Vérifier Réservation"
                        type="object"
                        class="btn-primary"/>
                    <button string="Effectuer les changement" type="object" 
                            name="action_edit_reservation" 
                            class="btn-success"/>
                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_edit_reservation_tree" model="ir.ui.view">
        <field name="name">edit.reservation.tree</field>
        <field name="model">edit.reservation</field>
        <field name="arch" type="xml">
            <tree string="edit reservation">
                <field name="name"/>
                <field name="date_depart"/>
                <field name="date_retour"/>
                <field name="heure_depart"/>
                <field name="heure_retour"/>
                <field name="reservation"/>
                <field name="lieu_depart"/>
                <field name="lieu_retour"/>
            </tree>
        </field>
    </record>

    <record id="action_edit_reservation" model="ir.actions.act_window">
        <field name="name">edit reservation</field>
        <field name="res_model">edit.reservation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_edit_reservation_sub"
              sequence="1"
              name="Request Edit "
              action="action_edit_reservation"
              groups="access_rights_groups.group_admin"/>
</odoo>
