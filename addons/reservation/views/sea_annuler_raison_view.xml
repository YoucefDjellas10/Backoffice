<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Définition de la vue formulaire -->
    <record id="view_sea_annuler_raison_form" model="ir.ui.view">
        <field name="name">sea.annuler.raison.form</field>
        <field name="model">sea.annuler.raison</field>
        <field name="arch" type="xml">
            <form string="annuler raison">
                <sheet>
                    <group class="custom-group" >
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Définition de la vue arborescente -->
    <record id="view_sea_annuler_raison_tree" model="ir.ui.view">
        <field name="name">sea.annuler.raison.tree</field>
        <field name="model">sea.annuler.raison</field>
        <field name="arch" type="xml">
            <tree string="annuler raison">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Définition de l'action -->
    <record id="action_sea_annuler_raison" model="ir.actions.act_window">
        <field name="name">Raison d'annulation par SEA</field>
        <field name="res_model">sea.annuler.raison</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Définition du menu -->
    <menuitem id="menu_sea_annuler_raison_sub_menu"
              name="Raison d'annulation SEA"
              sequence="3"
              parent="menu_configuration_sub"
              action="action_sea_annuler_raison"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>
</odoo>
