<odoo>
    <record id="view_retour_avance_pop_up_form" model="ir.ui.view">
        <field name="name">retour.avance.form</field>
        <field name="model">retour.avance</field>
        <field name="arch" type="xml">
            <form string="Retour Avance">
                <sheet>
                    <group>
                        <group string="Ancienne date">
                            <field name="name" invisible="1"/>
                            <field name="reservation" invisible="1"/>
                            <field name="date_retour_avance" invisible="1"/>
                            <field name="date_heure_fin"/>
                        </group>
                        <group string="Nouvelle date">
                            <field name="date_retour_avance"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Save" type="object" name="action_save_and_close" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
