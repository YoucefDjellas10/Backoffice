<odoo>
    <record id="_view_annuler_reservation_pop_up" model="ir.ui.view">
        <field name="name">reservation.form</field>
        <field name="model">reservation</field>
        <field name="arch" type="xml">
            <form string="Ajouter ecart">
                <sheet>
                    <group>
                        <field name="annuler_raison" string="Selectionner la raison" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="confirmer_l_annulation"
                            string="Confirmer"
                            type="object"
                            class="btn-primary"/>
                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
