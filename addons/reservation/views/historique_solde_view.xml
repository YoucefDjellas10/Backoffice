<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_historique_solde_form" model="ir.ui.view">
        <field name="name">historique.solde.form</field>
        <field name="model">historique.solde</field>
        <field name="arch" type="xml">
            <form string="categorie client">
                <sheet>
                    <group>
                        <group>
                            <field name="client"/>
                            <field name="create_date" string="Date"/>
                        </group>
                        <group>
                            <field name="reservation"/>
                            <field name="devise" invisible="1"/>
                            <field name="montant"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_historique_solde_tree" model="ir.ui.view">
        <field name="name">historique.solde.tree</field>
        <field name="model">historique.solde</field>
        <field name="arch" type="xml">
            <tree string="categorie client">
                <field name="client"/>
                <field name="reservation"/>
                <field name="create_date" string="Date"/>
                <field name="devise" optional="hide"/>
                <field name="montant"/>
            </tree>
        </field>
    </record>

    <record id="action__historique_solde" model="ir.actions.act_window">
        <field name="name">Historique solde</field>
        <field name="res_model">historique.solde</field>
        <field name="view_mode">tree,form</field>
       
    </record>

    <menuitem id="menu_historique_solde_sub"
              sequence="1"
              name="Historique Solde"
              parent="liste_clients.menu_configuration"
              action="action__historique_solde"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>
</odoo>
