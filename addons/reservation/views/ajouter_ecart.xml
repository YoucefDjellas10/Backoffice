<odoo>
    <record id="view_liste_ajouter_ecart_pop_up" model="ir.ui.view">
        <field name="name">reservation.form</field>
        <field name="model">reservation</field>
        <field name="arch" type="xml">
            <form string="Ajouter ecart">
                <sheet>
                    <group>
                        <field name="lecart" string="Ajouter un ecart"/>
                    </group>
                </sheet>
                <footer>
                    <button name="confirmer_lecart"
                            string="Confirmer"
                            type="object"
                            class="btn-primary"/>
                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
