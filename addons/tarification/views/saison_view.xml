<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Définition de la vue formulaire -->
    <record id="view_saison_form" model="ir.ui.view">
        <field name="name">saison.form</field>
        <field name="model">saison</field>
        <field name="arch" type="xml">
            <form string="saison">
                <sheet>
                    <group class="custom-group custom-group-width">
                        <field name="name"/>
                    </group>
                    <field name="periodes" style="border: 2px solid #2F336B;border-radius: 12px;"/>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Définition de la vue arborescente -->
    <record id="view_saison_tree" model="ir.ui.view">
        <field name="name">saison.tree</field>
        <field name="model">saison</field>
        <field name="arch" type="xml">
            <tree string="saison">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Définition de l'action -->
    <record id="action_saison" model="ir.actions.act_window">
        <field name="name">saison</field>
        <field name="res_model">saison</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_tarifications"
              name="Tarifications"
              sequence="2"
              action="action_saison"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>

    <menuitem id="menu_saison_sub_menu"
              name="Saisons"
              sequence="1"
              parent="menu_tarifications"
              action="action_saison"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>
</odoo>
