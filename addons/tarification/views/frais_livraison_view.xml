<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Définition de la vue formulaire -->
    <record id="view_frais_livraison_form" model="ir.ui.view">
        <field name="name">frais.livraison.form</field>
        <field name="model">frais.livraison</field>
        <field name="arch" type="xml">
            <form string="frais livraison">
                <sheet>
                    <group>
                        <groupe>
                            <group class="custom-group">
                                <field name="depart"/>
                                <field name="zone"/>
                                <field name="retour"/>
                                <field name="montant"/>
                            </group>
                        </groupe>
                        <group></group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Définition de la vue arborescente -->
    <record id="view_frais_livraison_tree" model="ir.ui.view">
        <field name="name">frais.livraison.tree</field>
        <field name="model">frais.livraison</field>
        <field name="arch" type="xml">
            <tree string="frais livraison">
                <field name="depart"/>
                <field name="retour"/>
                <field name="montant"/>
            </tree>
        </field>
    </record>

    <!-- Définition de l'action -->
    <record id="action_frais_livraison" model="ir.actions.act_window">
        <field name="name">frais livraison</field>
        <field name="res_model">frais.livraison</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Définition du menu -->
    <menuitem id="menu_frais_livraison_sub"
              name="Frais de livraison"
              sequence="9"
              parent="menu_tarifications"
              action="action_frais_livraison"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>
</odoo>
