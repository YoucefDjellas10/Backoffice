<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Définition de la vue formulaire -->
    <record id="view_periode_form" model="ir.ui.view">
        <field name="name">periode.form</field>
        <field name="model">periode</field>
        <field name="arch" type="xml">
            <form string="periode">
                <sheet>
                    <group>
                        <groupe>
                            <group class="custom-group">
                                <field name="name"/>
                                <field name="saison"/>
                                <field name="date_debut"/>
                                <field name="date_fin"/>
                            </group>
                        </groupe>
                        <group></group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Définition de la vue arborescente -->
    <record id="view_periode_tree" model="ir.ui.view">
        <field name="name">periode.tree</field>
        <field name="model">periode</field>
        <field name="arch" type="xml">
            <tree string="periode">
                <field name="name"/>
                <field name="saison"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
            </tree>
        </field>
    </record>

    <!-- Définition de l'action -->
    <record id="action_periode" model="ir.actions.act_window">
        <field name="name">periode</field>
        <field name="res_model">periode</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Définition du menu -->
    <menuitem id="menu_periode_sub"
              name="Période"
              sequence="2"
              parent="menu_tarifications"
              action="action_periode"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>
</odoo>
