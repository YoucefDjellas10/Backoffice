<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Définition de la vue formulaire -->
    <record id="view_type_degradation_form" model="ir.ui.view">
        <field name="name">type.degradation.form</field>
        <field name="model">type.degradation</field>
        <field name="arch" type="xml">
            <form string="type degradation">
                <sheet>
                    <group>
                        <groupe>
                            <group class="custom-group">
                                <field name="name"/>
                            </group>
                        </groupe>
                        <group></group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Définition de la vue arborescente -->
    <record id="view_type_degradation_tree" model="ir.ui.view">
        <field name="name">type.degradation.tree</field>
        <field name="model">type.degradation</field>
        <field name="arch" type="xml">
            <tree string="type degradation">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Définition de l'action -->
    <record id="action_type_degradation" model="ir.actions.act_window">
        <field name="name">Type frais retour</field>
        <field name="res_model">type.degradation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Définition du menu -->
    <menuitem id="menu_type_degradation_sub_menu"
              name="Type frais retour"
              sequence="10"
              parent="menu_tarifications"
              action="action_type_degradation"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>
</odoo>
