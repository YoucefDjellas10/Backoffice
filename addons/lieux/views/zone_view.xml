<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Définition de la vue formulaire -->
    <record id="view_zone_form" model="ir.ui.view">
        <field name="name">zone.form</field>
        <field name="model">zone</field>
        <field name="arch" type="xml">
            <form string="zone">
                <sheet>
                    <group class="custom-group custom-group-width-">
                        <group>
                            <field name="name"/>
                            <field name="manager"/>
                        </group>
                        <group>
                            <field name="country"/>
                            <field name="transmission_point"/>
                            <field name="agent" widget="many2many_tags"/>
                        </group>
                    </group>
                    <br/>
                    <div style="margin-bottom: 10px;">
                        <button name="open_create_lieux_wizard" type="object" string="Ajouter un lieux"
                                class="btn-info" help="Ce bouton permet d'ajouter un lieu dans la zone actuelle"/>
                    </div>
                    <field name="lieux" style="border: 2px solid #2F336B; border-radius: 12px;">
                        <tree create="false" delete="false">
                            <field name="name"/>
                            <field name="address"/>
                            <field name="zone"/>
                            <field name="country"/>
                            <field name="city"/>
                            <field name="lieu_type"/>
                            <field name="mobile"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Définition de la vue arborescente -->
    <record id="view_zone_tree" model="ir.ui.view">
        <field name="name">zone.tree</field>
        <field name="model">zone</field>
        <field name="arch" type="xml">
            <tree string="zone">
                <field name="name"/>
                <field name="country"/>
            </tree>
        </field>
    </record>

    <!-- Définition de l'action -->
    <record id="action_zone" model="ir.actions.act_window">
        <field name="name">Zone</field>
        <field name="res_model">zone</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Définition du menu -->
    <menuitem id="menu_lieux"
              name="Lieux"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>
    <menuitem id="menu_zone_sub"
              name="Zone"
              parent="menu_lieux"
              sequence="2"
              action="action_zone"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>
</odoo>
