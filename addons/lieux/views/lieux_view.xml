<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Définition de la vue formulaire -->
    <record id="view_lieux_form" model="ir.ui.view">
        <field name="name">lieux.form</field>
        <field name="model">lieux</field>
        <field name="arch" type="xml">
            <form string="lieux">
                <sheet>
                    <group class="custom-group custom-group-width">
                        <field name="name"/>
                        <field name="name_en"/>
                        <field name="name_ar"/>
                        <field name="address"/>
                        <field name="address_en"/>
                        <field name="address_ar"/>
                        <field name="rendez_vous"/>
                        <field name="zone"/>
                        <field name="country"/>
                        <field name="city"/>
                        <field name="lieu_type"
                               t-att-class="{'o_red': lieu_type == 'airport', 'o_green': lieu_type == 'office'}"/>

                        <field name="mobile"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Définition de la vue arborescente -->
    <record id="view_lieux_tree" model="ir.ui.view">
        <field name="name">lieux.tree</field>
        <field name="model">lieux</field>
        <field name="arch" type="xml">
            <tree string="lieux">
                <field name="name"/>
                <field name="address"/>
                <field name="zone"/>
                <field name="country"/>
                <field name="city"/>
                <field name="lieu_type"/>
                <field name="mobile"/>
            </tree>
        </field>
    </record>

    <!-- Définition de l'action -->
    <record id="action_lieux" model="ir.actions.act_window">
        <field name="name">Lieux</field>
        <field name="res_model">lieux</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Définition du menu -->
    <menuitem id="menu_lieux_sub"
              name="Lieux"
              sequence="1"
              parent="menu_lieux"
              action="action_lieux"
              groups="access_rights_groups.group_admin,access_rights_groups.group_ceo"/>
</odoo>
