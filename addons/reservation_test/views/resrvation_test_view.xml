<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="reservation_test_view_form" model="ir.ui.view">
            <field name="name">reservation.test.form</field>
            <field name="model">reservation.test</field>
            <field name="arch" type="xml">
                <form string="reservation test">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="car"/>
                                <field name="car_reservations"/>
                                <field name="car_model"/>

                            </group>
                            <group>
                                <field name="start_date" string="Date"
                                       options="{'end_date_field': 'end_date'}" widget="daterange"/>
                                <field name="end_date" invisible="1" string="Date"/>
                                <field name="car_model_search"/>
                                <field name="car_search"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue Tree -->
        <record id="reservation_test_view_tree" model="ir.ui.view">
            <field name="name">reservation.test.tree</field>
            <field name="model">reservation.test</field>
            <field name="arch" type="xml">

                <tree string="Reservation Test">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="car_model"/>
                </tree>
            </field>
        </record>


        <record id="reservation_test_action" model="ir.actions.act_window">
            <field name="name">reservation test</field>
            <field name="res_model">reservation.test</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu pour l'action du calendrier -->
        <menuitem id="menu_reservation_test" name="reservation test" sequence="11"/>
        <menuitem id="menu_reservation_test_list" name="reservation test" parent="menu_reservation_test"
                  action="reservation_test_action"/>

    </data>
</odoo>