<odoo>

    <record id="view_remplissage_graph" model="ir.ui.view">
        <field name="name">remplissage.graph</field>
        <field name="model">reservation</field>
        <field name="arch" type="xml">
            <graph string="remplissage" type="bar">
                <field name="modele"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_revenue_graph" model="ir.ui.view">
        <field name="name">Recette</field>
        <field name="model">reservation</field>
        <field name="arch" type="xml">
            <graph string="Recette" type="bar">
                <field name="currency_id_reduit" invisible="1"/>
                <field name="total_reduit_euro" string="Recette" type="measure" widget="monetary"
                       options="{'currency_field': 'currency_id_reduit'}"/>
                <field name="create_date" string="Date de reservation" type="row" interval="day"/>
            </graph>
        </field>
    </record>


    <record id="action_remplissage_graph" model="ir.actions.act_window">
        <field name="name">Recette</field>
        <field name="res_model">reservation</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_remplissage_graph"/>
    </record>

    <record id="action_revenue_graph" model="ir.actions.act_window">
        <field name="name">Recette</field>
        <field name="res_model">reservation</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_revenue_graph"/>
        <field name="domain">[('zone', '=', 1)]</field>
    </record>


    <record id="view_remplissage_form" model="ir.ui.view">
        <field name="name">remplissage.form</field>
        <field name="model">board.board</field>
        <field name="arch" type="xml">
            <form string="remplissage">
                <board style="1">
                    <column>
                        <action string="Remplissage" name="%(action_revenue_graph)d"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <record id="action_remplissage" model="ir.actions.act_window">
        <field name="name">Recette</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="view_remplissage_form"/>
    </record>

    <menuitem id="tableau_de_bord_menu"
              name="Tableau de bord"
              sequence="0" groups="access_rights_groups.group_admin"/>

    <menuitem id="remplissage_menu"
              name="Recette"
              sequence="0"
              parent="tableau_de_bord_menu"
              action="action_remplissage"/>


</odoo>